---
import '../styles/global.css';
import { Navbar } from "@/components/navbar";
import { Projects } from "@/components/projects";
import SplashCursor from '@/components/animations/SplashCursor'

---

<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>
 
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Andriu Garcia - Frontend Developer</title>
	</head>
 
	<body class="h-screen flex justify-center">
		<div class="w-full max-w-[1200px] pt-2 md:pt-4 px-2 md:px-4 flex flex-col">
			<SplashCursor client:load/>
			<Navbar client:load />
			<Projects client:load></Projects>
		</div>
	</body>
</html>